@model List<JobTracker.API.Models.ContactMessage>
@{
    ViewData["Title"] = "Submitted Messages";
}

<h2>Submitted Messages</h2>

@if (!Model.Any())
{
    <p>No messages have been submitted yet.</p>
}
else
{
    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>Submitted At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var msg in Model)
            {
                <tr>
                    <td>@msg.Name</td>
                    <td>@msg.Email</td>
                    <td>@msg.Message</td>
                    <td>@msg.SubmittedAt.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}
